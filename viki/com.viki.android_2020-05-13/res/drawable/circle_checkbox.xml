<?xml version="1.0" encoding="utf-8"?>
<animated-selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:id="@id/checked" android:drawable="@drawable/circle_checked" />
    <item android:state_checked="false" android:id="@id/unchecked" android:drawable="@drawable/circle_unchecked" />
    <transition android:drawable="@drawable/circle_unchecked_checked" android:toId="@id/checked" android:fromId="@id/unchecked" />
    <transition android:drawable="@drawable/circle_checked_unchecked" android:toId="@id/unchecked" android:fromId="@id/checked" />
</animated-selector>